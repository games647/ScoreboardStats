<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.github.games647</groupId>
    <artifactId>scoreboardstats</artifactId>
    <packaging>jar</packaging>

    <name>ScoreboardStats</name>
    <inceptionYear>2013</inceptionYear>
    <description>Show the Scoreboard with many custom variables</description>
    <version>0.8.5</version>
    <url>http://dev.bukkit.org/bukkit-plugins/scoreboardstats</url>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <powermock.version>1.6.1</powermock.version>
    </properties>

    <issueManagement>
        <system>GitHub</system>
        <url>https://github.com/games647/ScoreboardStats/issues</url>
    </issueManagement>

    <scm>
        <url>https://github.com/games647/ScoreboardStats</url>
        <connection>scm:git:git://github.com/games647/ScoreboardStats.git</connection>
        <developerConnection>scm:git:ssh://git@github.com:games647/ScoreboardStats.git</developerConnection>
    </scm>

    <build>
        <defaultGoal>package install</defaultGoal>
        <!--Just use the project name to replace an old version of the plugin if the user does only copy-paste-->
        <finalName>${project.name}</finalName>

        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <!-- Don't use 3.0 since the incremtalCompilation compiles every file even they aren't changed-->
                <version>2.5.1</version>
                <configuration>
                    <!--So many people still use Java 6 ;( http://mcstats.org/global/#Java+Version-->
                    <source>1.6</source>
                    <target>1.6</target>
                    <showWarnings>true</showWarnings>
                    <showDeprecation>true</showDeprecation>
                </configuration>
            </plugin>

            <!--Add meta data not only in the plugin.yml-->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>2.5</version>
                <configuration>
                    <archive>
                        <manifest>
                            <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
                            <addDefaultSpecificationEntries>true</addDefaultSpecificationEntries>
                        </manifest>
                        <manifestEntries>
                            <Url>${project.url}</Url>
                            <Source>${project.scm.url}</Source>
                            <Issue>${project.issueManagement.url}</Issue>
                            <Description>${project.description}</Description>
                        </manifestEntries>
                    </archive>
                </configuration>
            </plugin>
        </plugins>

        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <!--Replace variables-->
                <filtering>true</filtering>
            </resource>
            <!--Include source in the main jar-->
            <resource>
                <directory>src/main/java</directory>
            </resource>
        </resources>
    </build>

    <repositories>
        <!--ProtocolLib-->
        <repository>
            <id>comphenix-repo</id>
            <url>http://repo.comphenix.net/content/groups/public</url>
        </repository>

        <!--Repo for simpleclans-->
        <repository>
            <id>simpleclans-repo</id>
            <url>http://repo.sacredlabyrinth.net/artifactory/plugins-release-local</url>
        </repository>

        <!--Vault and Heroes-->
        <repository>
            <id>vault-repo</id>
            <url>http://nexus.theyeticave.net/content/groups/public/</url>
        </repository>

        <!--for mcMMO and Bukkit API-->
        <repository>
            <id>md_5-releases</id>
            <url>http://repo.md-5.net/content/groups/public/</url>
        </repository>
    </repositories>

    <dependencies>
        <dependency>
            <groupId>org.bukkit</groupId>
            <artifactId>bukkit</artifactId>
            <!--Compile with a low version, because the new getOnlinePlayers() won't be backwards compatibility.-->
            <!--while the older version still exists-->
            <version>1.7.9-R0.2</version>
            <scope>provided</scope>
        </dependency>

        <!--Library for listening and sending Minecraft packets to workaround
        the Bukkit API, so we can make scoreboard compatible with other
        scoreboard plugins -->
        <dependency>
            <groupId>com.comphenix.protocol</groupId>
            <artifactId>ProtocolLib</artifactId>
            <version>3.4.0</version>
            <exclusions>
                <!--definitely not needed-->
                <exclusion>
                    <groupId>com.comphenix.executors</groupId>
                    <artifactId>BukkitExecutors</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>cglib</groupId>
                    <artifactId>cglib-nodep</artifactId>
                </exclusion>
            </exclusions>
        </dependency>

        <dependency>
            <groupId>net.sacredlabyrinth.phaed.simpleclans</groupId>
            <artifactId>SimpleClans</artifactId>
            <version>2.5.1</version>
            <exclusions>
                <!--definitely not needed-->
                <exclusion>
                    <groupId>org.getspout</groupId>
                    <artifactId>spoutplugin</artifactId>
                </exclusion>
            </exclusions>
        </dependency>

        <!--API for economy variables-->
        <dependency>
            <groupId>net.milkbowl.vault</groupId>
            <artifactId>VaultAPI</artifactId>
            <version>1.5</version>
        </dependency>

        <dependency>
            <groupId>com.herocraftonline.heroes</groupId>
            <artifactId>Heroes</artifactId>
            <version>1.5.5.4-SNAPSHOT</version>
            <exclusions>
                <exclusion>
                    <groupId>me.desht</groupId>
                    <artifactId>scrollingmenusign</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>com.dthielke.herochat</groupId>
                    <artifactId>HeroChat</artifactId>
                </exclusion>

                <!--We just need the API, which we already have included-->
                <exclusion>
                    <groupId>net.milkbowl.vault</groupId>
                    <artifactId>Vault</artifactId>
                </exclusion>

                <!--Currently not available and definitely not needed. Maybe just for testing-->
                <exclusion>
                    <groupId>org.spigotmc</groupId>
                    <artifactId>spigot</artifactId>
                </exclusion>
                <!--Only available on spigot server-->
                <exclusion>
                    <groupId>org.spigotmc</groupId>
                    <artifactId>spigot-api</artifactId>
                </exclusion>
            </exclusions>
        </dependency>

        <dependency>
            <groupId>com.gmail.nossr50.mcMMO</groupId>
            <artifactId>mcMMO</artifactId>
            <version>1.5.00</version>
        </dependency>
        <!--dependencies in /lib-->

        <!--stats on signs-->
        <dependency>
            <groupId>de.blablubbabc</groupId>
            <artifactId>insigns</artifactId>
            <version>2.0</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/lib/IndividualSigns_v2.0.jar</systemPath>
        </dependency>

        <dependency>
            <groupId>uSkyBlock</groupId>
            <artifactId>uSkyBlock</artifactId>
            <version>2.1.0-SNAPSHOT</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/lib/uSkyBlock-api.jar</systemPath>
        </dependency>

        <!--Factions:-->
        <dependency>
            <groupId>com.massivecraft</groupId>
            <!--the name can't be the same because maven would automatically use the newer version-->
            <artifactId>factions1.6</artifactId>
            <!--1.6.9 and 1.8.2-->
            <version>1.6.9</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/lib/Factions1.6.9.jar</systemPath>
        </dependency>

        <dependency>
            <groupId>com.massivecraft</groupId>
            <artifactId>factions</artifactId>
            <!--2.7+-->
            <version>2.7.1</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/lib/Factions.jar</systemPath>
        </dependency>
        <!--MCore must be available for factions-->
        <dependency>
            <groupId>com.massivecraft</groupId>
            <artifactId>mcore</artifactId>
            <version>2.7.1</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/lib/MassiveCore.jar</systemPath>
        </dependency>

        <!--Testing environment-->
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.12</version>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.powermock</groupId>
            <artifactId>powermock-module-junit4</artifactId>
            <version>${powermock.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.powermock</groupId>
            <artifactId>powermock-api-mockito</artifactId>
            <version>${powermock.version}</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
</project>
